{#
/**
 * @file
 * List item child inside list paragraph bundle.
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  ]
%}

{% if custom.extra_classes is defined %}
  {% set classes = classes|merge(custom.extra_classes) %}
{% endif %}

{% block paragraph %}
  <article{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ custom.list_item }}
    {% endblock %}
  </article>
{% endblock paragraph %}
