{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * Outputs a paragraph as a section within its parent article.
 *
 * @see template_preprocess_paragraph()
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  ]
%}

{% if custom.extra_classes is defined %}
  {% set classes = classes|merge(custom.extra_classes) %}
{% endif %}

{% block paragraph %}
  <section{{ attributes.addClass(classes) }}>
    <div class="container">
    {% block content %}
    <div class="para-store">
      <div class="para-store-left">
        {{ content.field_image }}
      </div>
      <div class="para-store-right">
        {{ content.field_text }}
      </div>
    </div>
    {% endblock %}
    </div>
  </section>
{% endblock paragraph %}
