{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}



<div{{ attributes.addClass(classes) }}>
  <div class="container">
    {{ title_prefix }}
    {% if label %}
      <div class="block__title">{{ label }}</div>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
      {{ content }}
    {% endblock %}
  </div>
</div>
