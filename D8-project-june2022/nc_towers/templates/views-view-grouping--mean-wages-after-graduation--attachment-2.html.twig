{#
/**
 * @file
 * Theme override to display a single views grouping.
 *
 * Available variables:
 * - view: The view object.
 * - grouping: The grouping instruction.
 * - grouping_level: A number indicating the hierarchical level of the grouping.
 * - title: The group heading.
 * - content: The content to be grouped.
 * - rows: The rows returned from the view.
 *
 * @see template_preprocess_views_view_grouping()
 */
#}
{% set currentYear = title|striptags|trim|convert_encoding('UTF-8', 'HTML-ENTITIES') %}
{% set selectedYear = search_param['school'] %}
{% set selectedYear = search_param['program_study'] %}
{% set selectedYear = search_param['degree'] %}

{% set customClass = '' %}
{% set yearIndex = '' %}
{% if search_param['school']~'/'~search_param['program_study']~'/'~search_param['degree'] == currentYear %}
  {% set customClass = 'yearItem-0' %}
  {% set yearIndex = 0 %}
{% elseif search_param['school1']~'/'~search_param['program_study1']~'/'~search_param['degree1'] == currentYear%}
   {% set customClass = 'yearItem-1' %}
   {% set yearIndex = 1 %}
{% elseif search_param['school2']~'/'~search_param['program_study2']~'/'~search_param['degree2'] == currentYear %}
   {% set customClass = 'yearItem-2' %}
   {% set yearIndex = 2 %}
{% elseif search_param['school3']~'/'~search_param['program_study3']~'/'~search_param['degree3'] == currentYear %}
   {% set customClass = 'yearItem-3' %}
   {% set yearIndex = 3 %}
{% elseif search_param['school4']~'/'~search_param['program_study4']~'/'~search_param['degree4'] == currentYear %}
   {% set customClass = 'yearItem-4' %}
   {% set yearIndex = 4 %}
{% endif %}
<div class="view-grouping {{ customClass }}" data-yearclass="{{ customClass }}" data-yearindex="{{ yearIndex }}" data-year="{{ currentYear }}">
  {#<div class="view-grouping-header">{{ title }}</div>
  <div class="view-grouping-content">{{ content }}</div>#}
  {{ content }}
</div>
