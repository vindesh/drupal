
{% set currentTitle = title|striptags|trim|convert_encoding('UTF-8', 'HTML-ENTITIES') %}
{% set customClass = '' %}
{% set yearIndex = '' %}
{% if grouping_level == 0 %}
   {% set currentTitle = title|striptags|trim|convert_encoding('UTF-8', 'HTML-ENTITIES') %}
